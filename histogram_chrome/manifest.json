{
  "name" : "Image Histogram",
  "version" : "0.0.2",
  "description" : "Show a histogram for images",
  "background" : { "scripts": ["jquery-1.8.3.min.js", "pixastic.custom.js", "pixastic.additions.js", "background.js"] },
  "permissions" : [
    "contextMenus",
    "tabs",
    "http://*/*"
   ],
  "icons": {
    "16": "icon-bitty.png",
    "48": "icon-small.png",
    "128": "icon-large.png"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*"],
      "js": ["jquery-1.8.3.min.js", "pixastic.custom.js", "dohistogram.js"]
    }
  ],
  "content_security_policy": 
      "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "minimum_chrome_version" : "19.0.0.0",
  "manifest_version": 2
}
